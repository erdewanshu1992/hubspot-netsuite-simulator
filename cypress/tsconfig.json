{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["cypress"],
    "baseUrl": "../",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "../node_modules/cypress",
    "./**/*.ts",
    "./**/*.cy.ts"
  ],
  "exclude": [
    "../node_modules",
    "../src",
    "../tests"
  ]
}