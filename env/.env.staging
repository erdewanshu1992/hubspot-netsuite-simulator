# =====================================
# STAGING ENVIRONMENT
# =====================================

# Application Settings
PORT=3000
NODE_ENV=staging
APP_NAME="HubSpot-NetSuite Simulator (Staging)"

# Database Configuration
MONGODB_URI=mongodb://staging-db-host:27017/hubspot_netsuite_staging
MONGODB_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://staging-redis-host:6379
REDIS_DB=2
REDIS_PASSWORD=staging_redis_password

# HubSpot Configuration (Staging App)
HUBSPOT_API_KEY=staging_hubspot_api_key
HUBSPOT_CLIENT_ID=staging_client_id
HUBSPOT_CLIENT_SECRET=staging_client_secret
HUBSPOT_REDIRECT_URI=https://staging.yourapp.com/auth/hubspot/callback

# NetSuite Configuration (Production Account - Limited Access)
NETSUITE_ACCOUNT_ID=prod_account_id_limited
NETSUITE_CONSUMER_KEY=staging_consumer_key
NETSUITE_CONSUMER_SECRET=staging_consumer_secret
NETSUITE_TOKEN_ID=staging_token_id
NETSUITE_TOKEN_SECRET=staging_token_secret

# Email Configuration (Staging SMTP)
SMTP_HOST=staging-smtp.yourcompany.com
SMTP_PORT=587
SMTP_USERNAME=staging-smtp-user
SMTP_PASSWORD=staging_smtp_password
EMAIL_FROM=noreply-staging@yourcompany.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/staging.log
LOG_REQUESTS=true
LOG_RESPONSES=false

# Security
JWT_SECRET=staging-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
SESSION_SECRET=staging-session-secret-key
CORS_ORIGINS=https://staging.yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RETRY=true
ENABLE_CACHE=true
ENABLE_MONITORING=true

# Staging Settings
DEBUG=false
VERBOSE=false
MOCK_EXTERNAL_APIS=false

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true