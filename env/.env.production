# =====================================
# PRODUCTION ENVIRONMENT
# =====================================

# Application Settings
PORT=3000
NODE_ENV=production
APP_NAME="HubSpot-NetSuite Simulator"

# Database Configuration
MONGODB_URI=mongodb://prod-db-host:27017/hubspot_netsuite_prod
MONGODB_POOL_SIZE=20

# Redis Configuration
REDIS_URL=redis://prod-redis-host:6379
REDIS_DB=0
REDIS_PASSWORD=strong_production_redis_password

# HubSpot Configuration (Production App)
HUBSPOT_API_KEY=prod_hubspot_api_key
HUBSPOT_CLIENT_ID=prod_client_id
HUBSPOT_CLIENT_SECRET=prod_client_secret
HUBSPOT_REDIRECT_URI=https://yourapp.com/auth/hubspot/callback

# NetSuite Configuration (Production Account)
NETSUITE_ACCOUNT_ID=prod_account_id
NETSUITE_CONSUMER_KEY=prod_consumer_key
NETSUITE_CONSUMER_SECRET=prod_consumer_secret
NETSUITE_TOKEN_ID=prod_token_id
NETSUITE_TOKEN_SECRET=prod_token_secret

# Email Configuration (Production SMTP)
SMTP_HOST=prod-smtp.yourcompany.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USERNAME=prod-smtp-user@yourcompany.com
SMTP_PASSWORD=secure_production_smtp_password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME="HubSpot-NetSuite Integration"

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/production.log
LOG_REQUESTS=true
LOG_RESPONSES=false

# Security (High security for production)
JWT_SECRET=your-super-secure-production-jwt-secret-key-minimum-64-characters-long
JWT_EXPIRES_IN=12h
SESSION_SECRET=your-super-secure-production-session-secret-key
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RETRY=true
ENABLE_CACHE=true
ENABLE_MONITORING=true

# Production Settings
DEBUG=false
VERBOSE=false
MOCK_EXTERNAL_APIS=false

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# =====================================
# PRODUCTION-SPECIFIC SETTINGS
# =====================================

# Trust Proxy (for load balancers)
TRUST_PROXY=true

# Request Timeout (ms)
REQUEST_TIMEOUT=30000

# Keep Alive Timeout (ms)
KEEP_ALIVE_TIMEOUT=65000

# Headers Timeout (ms)
HEADERS_TIMEOUT=66000

# Body Parser Limits
BODY_LIMIT=10mb
PARAMETER_LIMIT=10000