# =====================================
# DEVELOPMENT ENVIRONMENT
# =====================================

# Application Settings
PORT=3000
NODE_ENV=development
APP_NAME="HubSpot-NetSuite Simulator (Dev)"

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hubspot_netsuite_dev
MONGODB_POOL_SIZE=5

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# HubSpot Configuration (Development App)
HUBSPOT_API_KEY=dev_hubspot_api_key
HUBSPOT_CLIENT_ID=dev_client_id
HUBSPOT_CLIENT_SECRET=dev_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:3000/auth/hubspot/callback

# NetSuite Configuration (Sandbox Account)
NETSUITE_ACCOUNT_ID=dev_account_id
NETSUITE_CONSUMER_KEY=dev_consumer_key
NETSUITE_CONSUMER_SECRET=dev_consumer_secret
NETSUITE_TOKEN_ID=dev_token_id
NETSUITE_TOKEN_SECRET=dev_token_secret

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/dev.log
LOG_REQUESTS=true
LOG_RESPONSES=true

# Security (Relaxed for development)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=dev-session-secret

# CORS (Allow frontend development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_RETRY=true
ENABLE_CACHE=true
ENABLE_MONITORING=true

# Development Settings
DEBUG=true
VERBOSE=true
MOCK_EXTERNAL_APIS=true

# Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true