# =====================================
# HubSpot-NetSuite Simulator
# Environment Configuration Template
# =====================================

# Copy this file to .env and update values for your environment

# =====================================
# APPLICATION SETTINGS
# =====================================

# Application Port
PORT=3000

# Node Environment
NODE_ENV=development

# Application Name
APP_NAME="HubSpot-NetSuite Simulator"

# API Version
API_VERSION=v1

# =====================================
# DATABASE CONFIGURATION
# =====================================

# MongoDB Connection String
# Format: mongodb://username:password@host:port/database?options
MONGODB_URI=mongodb://localhost:27017/hubspot_netsuite_simulator

# MongoDB Options
MONGODB_USE_NEW_URL_PARSER=true
MONGODB_USE_UNIFIED_TOPOLOGY=true

# Database Connection Pool Size
MONGODB_POOL_SIZE=10

# =====================================
# REDIS CONFIGURATION
# =====================================

# Redis Connection URL
REDIS_URL=redis://localhost:6379

# Redis Password (if required)
REDIS_PASSWORD=

# Redis Database Number
REDIS_DB=0

# Redis Connection Timeout (ms)
REDIS_TIMEOUT=5000

# =====================================
# HUBSPOT CONFIGURATION
# =====================================

# HubSpot API Key
HUBSPOT_API_KEY=your_hubspot_api_key_here

# HubSpot Client ID (for OAuth)
HUBSPOT_CLIENT_ID=your_hubspot_client_id

# HubSpot Client Secret (for OAuth)
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# HubSpot Redirect URI (for OAuth)
HUBSPOT_REDIRECT_URI=http://localhost:3000/auth/hubspot/callback

# HubSpot Webhook Secret
HUBSPOT_WEBHOOK_SECRET=your_webhook_secret_here

# =====================================
# NETSUITE CONFIGURATION
# =====================================

# NetSuite Account ID
NETSUITE_ACCOUNT_ID=your_netsuite_account_id

# NetSuite Consumer Key
NETSUITE_CONSUMER_KEY=your_consumer_key

# NetSuite Consumer Secret
NETSUITE_CONSUMER_SECRET=your_consumer_secret

# NetSuite Token ID
NETSUITE_TOKEN_ID=your_token_id

# NetSuite Token Secret
NETSUITE_TOKEN_SECRET=your_token_secret

# NetSuite REST API Endpoint
NETSUITE_REST_ENDPOINT=https://your-account-id.suitetalk.api.netsuite.com

# =====================================
# EMAIL CONFIGURATION
# =====================================

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP Secure (true for 465, false for other ports)
SMTP_SECURE=false

# SMTP Username
SMTP_USERNAME=your-email@gmail.com

# SMTP Password
SMTP_PASSWORD=your-app-password

# Email From Address
EMAIL_FROM=noreply@yourcompany.com

# Email From Name
EMAIL_FROM_NAME="HubSpot-NetSuite Simulator"

# =====================================
# LOGGING CONFIGURATION
# =====================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path (leave empty for console only)
LOG_FILE=

# Enable Request Logging
LOG_REQUESTS=true

# Enable Response Logging
LOG_RESPONSES=false

# =====================================
# SECURITY CONFIGURATION
# =====================================

# JWT Secret Key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration Time (e.g., 24h, 7d)
JWT_EXPIRES_IN=24h

# Session Secret
SESSION_SECRET=your-session-secret-key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# MONITORING CONFIGURATION
# =====================================

# Enable Health Checks
HEALTH_CHECK_ENABLED=true

# Health Check Path
HEALTH_CHECK_PATH=/health

# Metrics Collection
METRICS_ENABLED=true

# Metrics Path
METRICS_PATH=/metrics

# =====================================
# FEATURE FLAGS
# =====================================

# Enable Webhook Processing
ENABLE_WEBHOOKS=true

# Enable Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable Retry Mechanism
ENABLE_RETRY=true

# Enable Caching
ENABLE_CACHE=true

# Enable Monitoring
ENABLE_MONITORING=true

# =====================================
# DEVELOPMENT SETTINGS
# =====================================

# Enable Debug Mode
DEBUG=false

# Enable Verbose Logging
VERBOSE=false

# Mock External APIs (for testing)
MOCK_EXTERNAL_APIS=false

# =====================================
# PRODUCTION OVERRIDES
# =====================================

# Database Connection Pool (Production)
# MONGODB_POOL_SIZE=20

# Log Level (Production)
# LOG_LEVEL=warn

# Rate Limiting (Production)
# RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration (Production)
# SESSION_SECRET=your-production-session-secret
